        function funcion(){
          var ahora = new Date();
          var miliseg = ahora - inicial;
// La siguiente instrucción tiene el problema que
// establece una hora más por el desfase horario
          ahora.setTime(miliseg);
          var horas = ahora.getHours() - 1;
          var h1 = Math.floor(horas / 10);
          var h2 = horas - (h1 * 10);
          var minutos = ahora.getMinutes();
          var m1 = Math.floor(minutos / 10);
          var m2 = minutos - (m1 * 10);
          var segundos = ahora.getSeconds();
          var s1 = Math.floor(segundos / 10);
          var s2 = segundos - (s1 * 10);
          document.images["s2"].src = imagenes[s2];
          document.images["s1"].src = imagenes[s1];
          document.images["m2"].src = imagenes[m2];
          document.images["m1"].src = imagenes[m1];
          document.images["h2"].src = imagenes[h2];
          document.images["h1"].src = imagenes[h1];
        }
